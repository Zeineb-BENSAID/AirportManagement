@model AM.ApplicationCore.Domain.Plane

@{
    ViewData["Title"] = "Créer un Avion";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Ajouter un Nouvel Avion</h1>
        <p class="lead text-secondary">Remplissez les informations ci-dessous pour enregistrer un nouvel avion dans le système.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="p-4 shadow-sm rounded" style="background-color: #f8f9fa;">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Capacity" class="form-label text-primary fw-semibold"></label>
                    <input asp-for="Capacity" class="form-control rounded-pill shadow-sm" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ManufactureDate" class="form-label text-primary fw-semibold"></label>
                    <input asp-for="ManufactureDate" type="date" class="form-control rounded-pill shadow-sm" />
                    <span asp-validation-for="ManufactureDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PlaneType" class="form-label text-primary fw-semibold"></label>
                    <select asp-for="PlaneType" asp-items="Html.GetEnumSelectList<AM.ApplicationCore.Domain.PlaneType>()" class="form-control rounded-pill shadow-sm"></select>
                    <span asp-validation-for="PlaneType" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Créer" class="btn btn-primary btn-lg rounded-pill shadow" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="text-decoration-none text-secondary fw-semibold"><i class="bi bi-arrow-left-circle"></i> Retour à la liste</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
