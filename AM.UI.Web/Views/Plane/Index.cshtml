@model IEnumerable<AM.ApplicationCore.Domain.Plane>

@{
    ViewData["Title"] = "Gestion des avions";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Gestion des Avions</h1>
        <p class="lead text-secondary">Accédez aux informations clés de chaque avion et gérez-les facilement.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            <i class="bi bi-plus-circle"></i> Ajouter un nouvel avion
        </a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Capacity)</th>
                <th>@Html.DisplayNameFor(model => model.ManufactureDate)</th>
                <th>@Html.DisplayNameFor(model => model.PlaneId)</th>
                <th>@Html.DisplayNameFor(model => model.PlaneType)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                    <td>@Html.DisplayFor(modelItem => item.ManufactureDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlaneId)</td>
                    <td>@Html.DisplayFor(modelItem => item.PlaneType)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlaneId" class="btn btn-sm btn-outline-primary mx-1">
                            <i class="bi bi-pencil-square"></i> Modifier
                        </a>
                        <a asp-action="Details" asp-route-id="@item.PlaneId" class="btn btn-sm btn-outline-secondary mx-1">
                            <i class="bi bi-eye"></i> Détails
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.PlaneId" class="btn btn-sm btn-outline-danger mx-1">
                            <i class="bi bi-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
