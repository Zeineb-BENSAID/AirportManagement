@model AM.ApplicationCore.Domain.Plane

@{
    ViewData["Title"] = "Modifier l'Avion";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-primary fw-bold">Modifier l'Avion</h1>
        <p class="lead text-secondary">Mettez à jour les informations de l'avion ci-dessous.</p>
    </div>

    <div class="card shadow-sm p-4" style="background-color: #f8f9fa;">
        <h4 class="text-primary mb-3">Formulaire de Modification</h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ManufactureDate" class="control-label"></label>
                <input asp-for="ManufactureDate" class="form-control" />
                <span asp-validation-for="ManufactureDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaneType" class="control-label"></label>
                <select asp-for="PlaneType" asp-items="Html.GetEnumSelectList<AM.ApplicationCore.Domain.PlaneType>()" class="form-control"></select>
                <span asp-validation-for="PlaneType" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                <i class="bi bi-arrow-left-circle"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
